<UserControl x:Class="POS_APP.Views.LoginViews.RoleLoginView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:POS_APP.Views.LoginViews"
             mc:Ignorable="d" 
             d:DesignHeight="1200" d:DesignWidth="800">
    <Grid Background="#f1faff" >
        <Border Width="700"
                Background="#fbfff4"
                Height="750"
                CornerRadius="75"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Padding="20"
                BorderBrush="#130e09"
                BorderThickness="2">
            
            <StackPanel HorizontalAlignment="Center"
                        VerticalAlignment="Center"
        >

                <!-- Logo -->
                <Image Source="/Assets/logo.png"
           Width="250" Height="250"
           HorizontalAlignment="Center"
           Margin="0 0 0 20"/>



                <TextBlock Text="{Binding RoleTitle}"
                       FontSize="22"
                       FontWeight="Bold"
                       Foreground="Black"
					   Margin="0 10 0 25"
                       HorizontalAlignment="Center"/>


                <!-- TextBoxes -->
                <TextBlock Text="USERNAME"
                   FontWeight="SemiBold"
                   FontSize="18"
                   Margin="0,0,0,5"/>
                <TextBox Style="{StaticResource TBLogin}"
                 Text="{Binding Username, UpdateSourceTrigger=PropertyChanged}"                         
                     Margin="0,0,0,10">
                </TextBox>
                
                <TextBlock Text="{Binding RoleID}"
                   FontWeight="SemiBold"
                   FontSize="18"
                   Margin="0,0,0,5"/>
                <TextBox Style="{StaticResource TBLogin}" 
                 Text="{Binding BranchId, UpdateSourceTrigger=PropertyChanged}"
                 Margin="0,0,0,10">
                </TextBox>
                
                <TextBlock Text="PASSWORD"
                   FontWeight="SemiBold"
                   FontSize="18"
                   Margin="0,0,0,5"/>
                <PasswordBox x:Name="PasswordBox"
                     Style="{StaticResource PBLogin}"
                     PasswordChar="*"
                     PasswordChanged="PasswordBox_PasswordChanged"/>

                <!-- Login Button -->
                <Button Content="OPEN"   
            Style="{StaticResource BLogin}"
            Command="{Binding LoginCommand}"
            
	        IsDefault="True">
                </Button>
                <Button Command="{Binding BackCommand}"
                        Background="Transparent"
                        BorderThickness="0"
                        Cursor="Hand"
                        HorizontalAlignment="Center">
                    <TextBlock Text="Back"
				   Foreground="#130e09"
				   FontSize="20"
				   />
                </Button>
            </StackPanel>
        </Border>

    </Grid>
</UserControl>
