<UserControl x:Class="POS_APP.Views.DashboardViews.AdminDashboardView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:POS_APP.Views.DashboardViews"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="300"/>
            <!-- Sidebar -->
            <ColumnDefinition Width="*"/>
            <!-- Content Area -->
        </Grid.ColumnDefinitions>

        <!-- Sidebar -->
        <Border BorderBrush="#130e09" BorderThickness="0 0 2 0" Grid.Column="0">
            <StackPanel Background="#fbfff4">
                <Image Source="/Assets/logo.png" Height="150" Margin="10"/>
                <TextBlock Text="Admin Panel" FontWeight="Bold" FontSize="26" Margin="0,20" TextAlignment="Center"/>
                <Border BorderBrush="Black" BorderThickness="0 2" Padding="15" >
                    <StackPanel>
                        <TextBlock FontSize="24" Text="Juan Dela Cruz" TextAlignment="Center" />
                        <TextBlock FontSize="24" Text="Admin" TextAlignment="Center" />
                    </StackPanel>
                </Border>
                <ListBox FontSize="24"
         SelectedItem="{Binding SelectedMenu}"
         ItemsSource="{Binding MenuItems}">
                    <ListBox.Resources>
                        <Style TargetType="ListBoxItem">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="ListBoxItem">
                                        <Border x:Name="Bd" 
                                Background="White"
                                Padding="5">
                                            <ContentPresenter />
                                        </Border>
                                        <ControlTemplate.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter TargetName="Bd" Property="Background" Value="#130e09"/>
                                                <Setter Property="Foreground" Value="#fbfff4"/>
                                            </Trigger>
                                            <Trigger Property="IsSelected" Value="False">
                                                <Setter TargetName="Bd" Property="Background" Value="#fbfff4"/>
                                                <Setter Property="Foreground" Value="#130e09"/>
                                            </Trigger>
                                            <Trigger Property="IsSelected" Value="True">
                                                <Setter TargetName="Bd" Property="Background" Value="#130e09"/>
                                                <Setter Property="Foreground" Value="#fbfff4"/>
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </ListBox.Resources>
                </ListBox>


                <Button Style="{StaticResource BRole}" Command="{Binding LogoutCommand}" Content="LOG OUT" Margin="0,10"/>
                
            </StackPanel>
        </Border>

        <!-- Main Content -->
        <ContentControl Grid.Column="1"
                    Content="{Binding CurrentView}" />
    </Grid>
</UserControl>
