<UserControl x:Class="POS_APP.Views.SidebarViews.POSView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:POS_APP.Views.SidebarViews"
             mc:Ignorable="d"
             d:DesignHeight="1200" d:DesignWidth="1620">

    <UserControl.Resources>
        <!-- Boolean to Visibility converter -->
        <BooleanToVisibilityConverter x:Key="BoolToVisibilityConverter" />

        <!-- Product Templates -->
        <DataTemplate x:Key="ProductWithOptionsTemplate">
            <Border BorderBrush="Gray" BorderThickness="1" Padding="5" Margin="5">
                <StackPanel>
                    <Image Source="{Binding ImagePath}" Width="100" Height="100"/>
                    <TextBlock Text="{Binding Name}" FontWeight="Bold" Margin="0,5"/>
                    <TextBlock Text="{Binding Price, StringFormat=₱{0:F2}}"/>
                    <ComboBox ItemsSource="{Binding Sizes}" Visibility="{Binding HasSize, Converter={StaticResource BoolToVisibilityConverter}}" />
                    <ComboBox ItemsSource="{Binding Flavors}" Visibility="{Binding HasFlavor, Converter={StaticResource BoolToVisibilityConverter}}" />
                </StackPanel>
            </Border>
        </DataTemplate>

        <DataTemplate x:Key="BasicProductTemplate">
            <Border BorderBrush="Gray" BorderThickness="1" Padding="5" Margin="5">
                <StackPanel>
                    <Image Source="{Binding ImagePath}" Width="100" Height="100"/>
                    <TextBlock Text="{Binding Name}" FontWeight="Bold" Margin="0,5"/>
                    <TextBlock Text="{Binding Price, StringFormat=₱{0:F2}}"/>
                </StackPanel>
            </Border>
        </DataTemplate>

        <!-- Product Template Selector -->
        <local:ProductTemplateSelector x:Key="ProductTemplateSelector"
                                       WithOptionsTemplate="{StaticResource ProductWithOptionsTemplate}"
                                       BasicTemplate="{StaticResource BasicProductTemplate}" />

        <!-- Category Templates -->
        <DataTemplate x:Key="WithSubCategoriesTemplate">
            <StackPanel Margin="5">
                <TextBlock Text="{Binding Name}" FontSize="18" FontWeight="Bold" Margin="0,5"/>
                <ItemsControl ItemsSource="{Binding SubCategories}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <StackPanel Margin="0,10">
                                <TextBlock Text="{Binding Name}" FontWeight="Bold" FontSize="16"/>
                                <ItemsControl ItemsSource="{Binding Products}" ItemTemplateSelector="{StaticResource ProductTemplateSelector}">
                                    <ItemsControl.ItemsPanel>
                                        <ItemsPanelTemplate>
                                            <WrapPanel />
                                        </ItemsPanelTemplate>
                                    </ItemsControl.ItemsPanel>
                                </ItemsControl>
                            </StackPanel>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </StackPanel>
        </DataTemplate>

        <DataTemplate x:Key="NoSubCategoriesTemplate">
            <ItemsControl ItemsSource="{Binding Products}" ItemTemplateSelector="{StaticResource ProductTemplateSelector}">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <WrapPanel />
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
            </ItemsControl>
        </DataTemplate>

        <!-- Category Template Selector -->
        <local:CategoryTemplateSelector x:Key="CategoryTemplateSelector"
                                        WithSubCategoriesTemplate="{StaticResource WithSubCategoriesTemplate}"
                                        NoSubCategoriesTemplate="{StaticResource NoSubCategoriesTemplate}" />
    </UserControl.Resources>

    <Grid Background="#F1FAFF">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="3*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height=".1*" />
            <RowDefinition Height=".1*" />
        </Grid.RowDefinitions>

        <!-- First Column: Kitchen, Kiosk, Menu -->
        <Grid Grid.Column="0" Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*" />
                <ColumnDefinition Width="2*" />
                <ColumnDefinition Width="3*" />
            </Grid.ColumnDefinitions>

            <!-- Kitchen Orders -->
            <Border Grid.Column="0" BorderBrush="Black" BorderThickness="0 0 2 0">
                <StackPanel>
                    <Border BorderBrush="Black" BorderThickness="0 0 0 2">
                        <TextBlock Text="Kitchen" FontSize="32" FontWeight="Bold" Margin="10 20" TextAlignment="Center"/>
                    </Border>
                    <ItemsControl ItemsSource="{Binding KitchenOrders}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding OrderId}" FontSize="28" FontWeight="Bold" Margin="10 5" TextAlignment="Center"/>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </StackPanel>
            </Border>

            <!-- Kiosk Orders -->
            <Border Grid.Column="1" BorderBrush="Black" BorderThickness="0 0 2 0">
                <StackPanel Margin="10">
                    <TextBlock Text="Kiosk Orders" FontSize="32" FontWeight="Bold" Margin="0,10" TextAlignment="Center"/>
                    <ItemsControl Name="KioskOrdersList">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border BorderBrush="Gray" BorderThickness="1" Padding="10" Margin="0,5">
                                    <StackPanel>
                                        <TextBlock Text="Order Title" FontWeight="Bold" FontSize="14"/>
                                        <ItemsControl>
                                            <ItemsControl.ItemTemplate>
                                                <DataTemplate>
                                                    <TextBlock Text="Order Item"/>
                                                </DataTemplate>
                                            </ItemsControl.ItemTemplate>
                                        </ItemsControl>
                                        <TextBlock Text="Total: " FontWeight="Bold"/>
                                        <TextBlock Text="Payment Received: "/>
                                        <TextBlock Text="Change: "/>
                                        <StackPanel Orientation="Horizontal">
                                            <Button Content="Confirm" Margin="5" />
                                            <Button Content="Void" Margin="5" />
                                        </StackPanel>
                                    </StackPanel>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </StackPanel>
            </Border>

            <!-- Menu Categories & Products -->
            <Border Grid.Column="2" BorderBrush="Black" BorderThickness="0 0 2 0">
                <StackPanel Background="#FBFFF4">
                    <TextBlock Text="MENU" FontSize="24" FontWeight="Bold" Margin="0,10" TextAlignment="Center"/>
                    <ScrollViewer HorizontalAlignment="Center" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
                        <ItemsControl ItemsSource="{Binding Categories}">
                            <ItemsControl.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <WrapPanel Orientation="Horizontal" ItemWidth="145" ItemHeight="65"/>
                                </ItemsPanelTemplate>
                            </ItemsControl.ItemsPanel>
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Button Style="{StaticResource BMenu}" 
                                            Command="{Binding DataContext.SelectCategoryCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                            CommandParameter="{Binding}">
                                        <TextBlock Style="{StaticResource TMenu}" Text="{Binding Name}"/>
                                    </Button>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </ScrollViewer>

                    <!-- Product Display -->
                    <ItemsControl ItemsSource="{Binding SelectedCategory   }" 
                                  ItemTemplateSelector="{StaticResource CategoryTemplateSelector}" 
                                  Margin="0,20">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <WrapPanel />
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                    </ItemsControl>
                </StackPanel>
            </Border>
        </Grid>

        <!-- Second and Third Row Borders -->
        <Border Grid.Column="0" Grid.Row="1" BorderBrush="Black" BorderThickness="1"/>
        <Border Grid.Column="0" Grid.Row="2" BorderBrush="Black" BorderThickness="1"/>

        <!-- Manual Orders Column -->
        <StackPanel Grid.Column="1" Grid.RowSpan="3" Margin="10">
            <TextBlock Text="Manual Orders" FontSize="18" FontWeight="Bold" TextAlignment="Center"/>
            <Button Content="Process Manual Order" HorizontalAlignment="Left"/>
            <Border BorderBrush="Gray" BorderThickness="1" Padding="10" Margin="0,10">
                <StackPanel>
                    <TextBlock Text="Order ID" FontSize="16" FontWeight="Bold"/>
                    <ItemsControl>
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <TextBlock Text="Manual Order Item"/>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                    <TextBlock Text="Total: " FontWeight="Bold"/>
                    <TextBlock Text="Payment Received: "/>
                    <TextBlock Text="Change: "/>
                    <StackPanel Orientation="Horizontal">
                        <Button Content="Confirm" Margin="5" />
                        <Button Content="Void" Margin="5" />
                    </StackPanel>
                </StackPanel>
            </Border>
        </StackPanel>
    </Grid>
</UserControl>
