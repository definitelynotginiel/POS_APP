<UserControl x:Class="POS_APP.Views.SidebarViews.POSView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:POS_APP.Views.SidebarViews"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Background="AliceBlue">
        <!-- Outer grid: 2 columns -->
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <!-- Outer grid: 3 rows (only applies to first column's layout) -->
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <!-- First row -->
            <RowDefinition Height=".1*" />
            <!-- Second row -->
            <RowDefinition Height=".1*" />
            <!-- Third row -->
        </Grid.RowDefinitions>

        <!-- First row in first column (nested grid with 3 columns) -->
        <Grid Grid.Column="0" Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*" />
                <ColumnDefinition Width="2*" />
                <ColumnDefinition Width="3*" />
            </Grid.ColumnDefinitions>

            <Border Grid.Column="0" BorderBrush="Black" BorderThickness="1" />
            <Border Grid.Column="1" BorderBrush="Black" BorderThickness="1" />
            <Border Grid.Column="2" BorderBrush="Black" BorderThickness="0 0 2 0">
                <StackPanel Margin="10">
                    <TextBlock Text="MENU" FontSize="24" FontWeight="Bold" Margin="0,20" TextAlignment="Center"/>
                    <WrapPanel ItemWidth="140" ItemHeight="80">
                        <Button>
                            <TextBlock Text ="Fries and Spaghetti"/>
                        </Button>
                        <Button>
                            <TextBlock Text="Filipino Meals"/>
                        </Button>
                        <Button>
                            <TextBlock Text="Burgers and Sandwiches"/>
                        </Button>
                        <Button>
                            <TextBlock Text="Fried Chicken Wings"/>
                        </Button>
                        <Button>
                            <TextBlock Text="Ramen"/>
                        </Button>
                        <Button>
                            <TextBlock Text="Milktea"/>
                        </Button>
                        <Button>
                            <TextBlock Text="Fruittea"/>
                        </Button>
                        <Button>
                            <TextBlock Text="Frappe"/>
                        </Button>
                        <Button>
                            <TextBlock Text="Others"/>
                        </Button>
                        <Button Width="420">
                            <TextBlock Text="Promos"/>
                        </Button>

                    </WrapPanel>
                    <ContentControl  Margin="0,20"/>
                </StackPanel>
            </Border>
        </Grid>

        <!-- Second row in first column -->
        <Border Grid.Column="0" Grid.Row="1" BorderBrush="Black" BorderThickness="1" />

        <!-- Third row in first column -->
        <Border  Grid.Column="0" Grid.Row="2" BorderBrush="Black" BorderThickness="1" />

        <!-- Manual Orders -->
        <StackPanel Grid.Column="1" Grid.RowSpan="3" Margin="10">
            <TextBlock Text="Manual Orders" FontSize="18" FontWeight="Bold"/>
                <Button Content="Process Manual Order"/>

                <Border BorderBrush="Gray" BorderThickness="1" Padding="10" Margin="0,10">
                    <StackPanel>
                        <TextBlock Text="Order ID" FontSize="16" FontWeight="Bold"/>
                        <ItemsControl>
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <TextBlock Text="Manual Order Item"/>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                        <TextBlock Text="Total: " FontWeight="Bold"/>
                        <TextBlock Text="Payment Received: "/>
                        <TextBlock Text="Change: "/>
                        <StackPanel Orientation="Horizontal">
                            <Button Content="Confirm" Margin="5" />
                            <Button Content="Void" Margin="5" />
                        </StackPanel>
                    </StackPanel>
                </Border>
            </StackPanel>
    </Grid>



</UserControl>
