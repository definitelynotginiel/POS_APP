<UserControl x:Class="POS_APP.Views.InventoryViews.InvMonitorDashboardView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:conv="clr-namespace:POS_APP.Converters"
             mc:Ignorable="d" 
             d:DesignHeight="1000" d:DesignWidth="1200">
    <UserControl.Resources>
        <conv:StockStatusToColorConverter  x:Key="StockStatusToColorConverter"/>
    </UserControl.Resources>

    <Grid Background="#FFF5F5F5">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Header -->
            <RowDefinition Height="Auto"/>
            <!-- Filters and summary cards -->
            <RowDefinition Height="*"/>
            <!-- Data grid -->
            <RowDefinition Height="Auto"/>
            <!-- Action buttons -->
        </Grid.RowDefinitions>

        <!-- Header with accent color -->
        <Border Grid.Row="0" Background="#FF2C3E50" Padding="20 15">
            <TextBlock Text="Inventory Monitoring Dashboard"
                   Foreground="White" FontSize="28" FontWeight="Bold"
                   VerticalAlignment="Center"/>
        </Border>

        <!-- Filters and summary section -->
        <Grid Grid.Row="1" Margin="20 15">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <!-- Category Filter -->
            <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                <TextBlock Text="Categories:" VerticalAlignment="Center" 
                           FontSize="20" FontWeight="SemiBold" Margin="0,0,8,0"/>
                <ComboBox Width="250" Height="32"
                          VerticalContentAlignment="Center"
                          ItemsSource="{Binding ItemCategories}"
                          SelectedItem="{Binding SelectedCategory, Mode=TwoWay}"
                          FontSize="20"/>
            </StackPanel>

            <!-- Search box -->
            <StackPanel Orientation="Horizontal" Grid.Column="1" HorizontalAlignment="Right" Margin="10 0" >
                <TextBlock Text="Search:" VerticalAlignment="Center" Margin="10 0" FontSize="20"/>
                <Border Width="300" Height="32" BorderBrush="#FFCCCCCC" BorderThickness="1" CornerRadius="4" 
        Background="White">
                    <Grid>
                        <TextBox Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}" 
                 BorderThickness="0" Background="Transparent"
                 Padding="12,0,40,0" VerticalContentAlignment="Center"
                 FontSize="20" Margin="0"/>
                        <Path Data="M15.5,14L20.5,19L19,20.5L14,15.5C12.8,16.5 11.3,17 9.5,17C5.4,17 2,13.6 2,9.5C2,5.4 5.4,2 9.5,2C13.6,2 17,5.4 17,9.5C17,11.3 16.5,12.8 15.5,14ZM9.5,3C6.5,3 4,5.5 4,9.5C4,13.5 6.5,16 9.5,16C12.5,16 15,13.5 15,9.5C15,5.5 12.5,3 9.5,3Z" 
              Stretch="Uniform" Fill="#FF888888" Width="20" Height="20"
              HorizontalAlignment="Right" VerticalAlignment="Center" Margin="0,0,12,0"/>
                    </Grid>
                </Border>
            </StackPanel>
            <!-- Summary stats -->
            <StackPanel Grid.Column="2" Orientation="Horizontal">
                <!-- Total Items Card -->
                <Border Background="White" CornerRadius="6" Padding="12 8" 
                        Margin="5,0" Width="120" Height="60"
                        BorderThickness="1" BorderBrush="#FFE0E0E0"
                        Effect="{StaticResource CardShadow}">
                    <StackPanel HorizontalAlignment="Center">
                        <TextBlock Text="Total Items" FontSize="16" Foreground="#FF666666"/>
                        <TextBlock Text="{Binding TotalItemsCount}" FontSize="18" Margin="0 2 0 0" TextAlignment="Center"
                                   FontWeight="Bold" Foreground="#FF2C3E50"/>
                    </StackPanel>
                </Border>

                <!-- Low Stock Card -->
                <Border Background="White" CornerRadius="6" Padding="12 8" 
                        Margin="5,0" Width="120" Height="60"
                        BorderThickness="1" BorderBrush="#FFE0E0E0"
                        Effect="{StaticResource CardShadow}">
                    <StackPanel HorizontalAlignment="Center">
                        <TextBlock Text="Low Stock" FontSize="16" Foreground="#FF666666"/>
                        <TextBlock Text="{Binding LowStockCount}" FontSize="18" Margin="0 2 0 0" TextAlignment="Center"
                                   FontWeight="Bold" Foreground="#FFE74C3C"/>
                    </StackPanel>
                </Border>
            </StackPanel>
        </Grid>

        <!-- Inventory DataGrid -->
        <Border Grid.Row="2" Margin="20,10,20,20" CornerRadius="6" 
                Background="White" BorderThickness="1" BorderBrush="#FFE0E0E0"
                Effect="{StaticResource CardShadow}">
            <DataGrid ItemsSource="{Binding InventoryItems}"
                      AutoGenerateColumns="False"
                      CanUserAddRows="False"
                      FontSize="20"
                      HeadersVisibility="Column"
                      SelectionMode="Single"
                      IsReadOnly="True"
                      SelectedItem="{Binding SelectedInventoryItem, Mode=TwoWay}">

                <DataGrid.Columns>
                    <DataGridTextColumn Header="Item Name" Binding="{Binding Name}" Width="2*" />
                    <DataGridTextColumn Header="Packs" Binding="{Binding PacksCount}" Width="0.8*" />
                    <DataGridTextColumn Header="Quantity" Binding="{Binding QuantityDisplay}" Width="1*" />
                    <DataGridTemplateColumn Header="Stock Status" Width="1.2*">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <Border  
                                        Background="{Binding StockStatus, Converter={StaticResource StockStatusToColorConverter}}">
                                    <TextBlock Text="{Binding StockStatus}" Foreground="Black" 
                                               FontWeight="SemiBold" FontSize="20"
                                               VerticalAlignment="Center"
                                               HorizontalAlignment="Center"/>
                                </Border>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                    <DataGridTextColumn Header="Last Updated" Binding="{Binding LastUpdated, StringFormat='MM/dd/yyyy'}" Width="1.2*" />
                </DataGrid.Columns>

                <DataGrid.RowStyle>
                    <Style TargetType="DataGridRow">
                        <Setter Property="FontSize" Value="22"/>
                        <Setter Property="Padding" Value="20 10"/>
                        <Setter Property="VerticalContentAlignment" Value="Center"/>
                        <Setter Property="BorderBrush" Value="Transparent"/>
                        <Setter Property="BorderThickness" Value="0 0 0 1"/>
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#FFF5F9FF"/>
                            </Trigger>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter Property="Background" Value="#FFE3F2FD"/>
                                <Setter Property="BorderBrush" Value="#FF2196F3"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </DataGrid.RowStyle>

                <DataGrid.ColumnHeaderStyle>
                    <Style TargetType="DataGridColumnHeader">
                        <Setter Property="Background" Value="#FFF7F9FC"/>
                        <Setter Property="BorderBrush" Value="#FFE0E0E0"/>
                        <Setter Property="BorderThickness" Value="0 0 1 0"/>
                        <Setter Property="Foreground" Value="#FF2C3E50"/>
                        <Setter Property="FontWeight" Value="SemiBold"/>
                        <Setter Property="Padding" Value="12,8"/>
                        <Setter Property="HorizontalContentAlignment" Value="Left"/>
                    </Style>
                </DataGrid.ColumnHeaderStyle>
            </DataGrid>
        </Border>

        <!-- Expiration summary and action buttons -->
        <Grid Grid.Row="3" Margin="20,0,20,20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Expiration Summary -->
            <Border Grid.Column="1" Background="White" CornerRadius="6" Padding="15"
                    BorderThickness="1" BorderBrush="#FFE0E0E0"
                    Effect="{StaticResource CardShadow}">
                <StackPanel HorizontalAlignment="Center">
                    <TextBlock TextAlignment="Center" Text="Expiration Summary" FontSize="24" 
                               FontWeight="Bold" Margin="0,0,0,10" Foreground="#FF2C3E50"/>

                    <StackPanel Orientation="Horizontal">

                        <!-- Good Stock Card -->
                        <Border Background="#FFE8F5E9" CornerRadius="4" Padding="12" 
                                Margin="0,0,15,0" Width="140">
                            <StackPanel>
                                <TextBlock Text="Good" FontSize="18" Foreground="#FF3C763D"/>
                                <TextBlock Text="{Binding GoodStockCount}" FontSize="20" 
                                           FontWeight="Bold" Foreground="#FF3C763D"/>
                            </StackPanel>
                        </Border>
                        
                        <!-- Near Expiry Card -->
                        <Border Background="#FFFFF8E1" CornerRadius="4" Padding="12" 
                                Margin="0,0,15,0" Width="140">
                            <StackPanel>
                                <TextBlock Text="Near Expiry" FontSize="18" Foreground="#FF8A6D3B"/>
                                <TextBlock Text="{Binding NearExpiryCount}" FontSize="20" 
                                           FontWeight="Bold" Foreground="#FF8A6D3B"/>
                            </StackPanel>
                        </Border>

                        <!-- Expired Card -->
                        <Border Background="#FFFBEBEE" CornerRadius="4" Padding="12" 
                                Width="140">
                            <StackPanel>
                                <TextBlock Text="Expired" FontSize="18" Foreground="#FFA94442"/>
                                <TextBlock Text="{Binding ExpiredCount}" FontSize="20" 
                                           FontWeight="Bold" Foreground="#FFA94442"/>
                            </StackPanel>
                        </Border>
                    </StackPanel>
                </StackPanel>
            </Border>

            <!-- Action buttons -->
            <WrapPanel Orientation="Vertical" Grid.Column="0" HorizontalAlignment="Center" VerticalAlignment="Center">
                <WrapPanel Orientation="Horizontal">
                <Button Content="Stock In" Command="{Binding GoToStockInCommand}" 
                        Width="200" Height="50" FontSize="20" Margin="5,5"
                        Style="{StaticResource BRole}"/>
                <Button Content="Stock Out" Command="{Binding GoToStockOutCommand}" 
                        Width="200" Height="50" FontSize="20" Margin="5,5"
                        Style="{StaticResource BRole}"/>
                </WrapPanel>
                <WrapPanel Orientation="Horizontal">
                    <Button Content="Registry" Command="{Binding GoToRegistryCommand}" 
                        Width="200" Height="50" FontSize="20" Margin="5,5"
                        Style="{StaticResource BRole}"/>
                <Button Content="Expiration" Command="{Binding GoToExpireTrackCommand}"  
                        Width="200" Height="50" FontSize="20" Margin="5,5"
                        Style="{StaticResource BRole}"/>
                </WrapPanel>
            </WrapPanel>
        </Grid>
    </Grid>
</UserControl>