<UserControl x:Class="POS_APP.Views.InventoryViews.InvRegistryView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:POS_APP.Views.InventoryViews"
             xmlns:fa="clr-namespace:FontAwesome.WPF;assembly=FontAwesome.WPF" 
             xmlns:conv="clr-namespace:POS_APP.Converters"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.Resources>
        <conv:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
    </UserControl.Resources>
    <Grid Background="AliceBlue">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <TextBlock  Grid.Row="0"
               Text="Inventory Registry" 
               FontSize="22" 
               FontWeight="Bold" 
               HorizontalAlignment="Center" 
               Margin="0,0,0,10"/>

        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Grid Background="Beige" Grid.Column="0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <Grid Grid.Row="0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>                    
                
                <!-- Left column: category + item list -->
                <StackPanel Grid.Column="0" Margin="0,0,10,0">
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,12">
                        <TextBlock Text="Categories:" VerticalAlignment="Center" FontSize="16" Margin="0,0,8,0"/>
                        <ComboBox Width="200"
              ItemsSource="{Binding ItemCategories}"
              SelectedItem="{Binding SelectedCategory, Mode=TwoWay}"
              FontSize="16"/>
                    </StackPanel>
                    <DataGrid 
           AutoGenerateColumns="False"
           CanUserAddRows="False"
           CanUserDeleteRows="False"
           IsReadOnly="True"
           HeadersVisibility="Column"
           AlternatingRowBackground="LightGray"
           RowHeaderWidth="0"
           Margin="0,0,0,15"
           ItemsSource="{Binding InventoryItems}"
           SelectedItem="{Binding SelectedInventoryItem, Mode=TwoWay}">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Items" Binding="{Binding Name}" Width="*"/>
                            <DataGridTextColumn Header="Measurement Type" Binding="{Binding Unit}" Width="*"/>
                            <DataGridTemplateColumn Header="Edit Stock Status" Width="100">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <Button
                             ToolTip="Stock Out"
                             Command="{Binding DataContext.EditStatusCommand, RelativeSource={RelativeSource AncestorType=DataGrid}}"
                             CommandParameter="{Binding}">
                                            <fa:ImageAwesome Icon="Edit" Width="20" Height="20" Foreground="Green"/>
                                        </Button>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                        </DataGrid.Columns>
                    </DataGrid>
                </StackPanel>
                    <StackPanel Background="LightGray" Grid.Column="1"
            Visibility="{Binding IsEditPanelVisible, Converter={StaticResource BoolToVisibilityConverter}}">

                        <TextBlock Text="Edit Stock Status" FontSize="18" FontWeight="Bold" Margin="0,0,0,10"/>

                        <TextBlock Text="{Binding SelectedForEdit.Name}" FontSize="16" Margin="0,0,0,10"/>

                        <TextBlock Text="Threshold Quantity:"/>
                        <TextBox Text="{Binding GoodThreshold, Mode=TwoWay}" Width="100" Margin="0,0,0,10"/>

                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                            <Button Content="Save" Command="{Binding SaveStatusCommand}" Margin="0,0,5,0"/>
                            <Button Content="Cancel" Command="{Binding CancelEditCommand}"/>
                        </StackPanel>
                    </StackPanel>

                </Grid>
                <Button Grid.Row="1"
Content="Back to Monitoring Dashboard"
Width="250"
Height="35"
HorizontalAlignment="Left"
Command="{Binding BackCommand}"/>
            </Grid>
            <!-- Right column: stock out form -->
            <StackPanel Background="Blue" Grid.Column="1" Margin="0,0,0,0">

                

            </StackPanel>

            <!-- Footer -->
        </Grid>
    </Grid>
</UserControl>
