<UserControl x:Class="POS_APP.Views.InventoryViews.InvRegistryView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:POS_APP.Views.InventoryViews"
             xmlns:conv="clr-namespace:POS_APP.Converters"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="1000">

    <UserControl.Resources>
        <conv:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter"/>

        <Style x:Key="FormLabel" TargetType="TextBlock">
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="Margin" Value="0,0,0,6"/>
            <Setter Property="Foreground" Value="#FF444444"/>
        </Style>

        <Style x:Key="PrimaryButton" TargetType="Button">
            <Setter Property="Background" Value="#FF2C3E50"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Height" Value="35"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Padding" Value="15,0"/>
        </Style>

        <Style x:Key="SecondaryButton" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="#FF2C3E50"/>
            <Setter Property="BorderBrush" Value="#FF2C3E50"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Height" Value="35"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Padding" Value="15,0"/>
        </Style>

        <Style x:Key="DangerButton" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="#FFE74C3C"/>
            <Setter Property="BorderBrush" Value="#FFE74C3C"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Height" Value="35"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Padding" Value="15,0"/>
        </Style>
    </UserControl.Resources>

    <Grid Background="#FFF5F5F5">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="#FF2C3E50" Padding="20,15">
            <TextBlock Text="Inventory Registry" 
                       Foreground="White" 
                       FontSize="22" 
                       FontWeight="Bold"
                       VerticalAlignment="Center"/>
        </Border>

        <Grid Grid.Row="1" Margin="20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="10"/>
                <ColumnDefinition Width="350"/>
            </Grid.ColumnDefinitions>

            <!-- Left column: Items List -->
            <Border Grid.Column="0" Background="White" CornerRadius="6" Padding="20"
                    BorderThickness="1" BorderBrush="#FFE0E0E0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- Filter Section -->
                    <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,15">
                        <TextBlock Text="Filter by Category:" VerticalAlignment="Center" 
                                   FontSize="16" FontWeight="SemiBold" Margin="0,0,8,0"/>
                        <ComboBox Width="220" Height="35"
                                  ItemsSource="{Binding ItemCategories}"
                                  SelectedItem="{Binding SelectedCategory, Mode=TwoWay}"
                                  FontSize="14"/>

                        <!-- Search Box -->
                        <Border BorderBrush="#FFCCCCCC" BorderThickness="1" CornerRadius="4" 
                                Margin="20,0,0,0" Background="White" Height="35" Width="250">
                            <Grid>
                                <TextBox Text="{Binding SearchQuery, UpdateSourceTrigger=PropertyChanged}" 
                                         BorderThickness="0" Background="Transparent"
                                         Padding="12,0,40,0" VerticalContentAlignment="Center"/>
                                <TextBlock Text="&#xf002;" 
                                           Style="{StaticResource Icon}"
                                           FontSize="14" Foreground="#FF888888"
                                           HorizontalAlignment="Right" VerticalAlignment="Center" 
                                           Margin="0,0,12,0"/>
                            </Grid>
                        </Border>
                    </StackPanel>

                    <!-- Items DataGrid -->
                    <DataGrid Grid.Row="1"
                              AutoGenerateColumns="False"
                              CanUserAddRows="False"
                              CanUserDeleteRows="False"
                              IsReadOnly="True"
                              HeadersVisibility="Column"
                              AlternatingRowBackground="#FFF9F9F9"
                              RowHeaderWidth="0"
                              ItemsSource="{Binding InventoryItems}"
                              SelectedItem="{Binding SelectedInventoryItem, Mode=TwoWay}">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Item Name" Binding="{Binding Name}" Width="2*" />
                            <DataGridTextColumn Header="Category" Binding="{Binding Category}" Width="1.5*" />
                            <DataGridTextColumn Header="Measurement" Binding="{Binding Unit}" Width="1*" />
                            <DataGridTextColumn Header="Current Stock" Binding="{Binding QuantityDisplay}" Width="1*" />
                            <DataGridTextColumn Header="Stock Status" Binding="{Binding StockStatus}" Width="1.2*" />
                            <DataGridTextColumn Header="Threshold" Binding="{Binding Threshold}" Width="1*" />

                            <DataGridTemplateColumn Header="Actions" Width="120">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <Button ToolTip="Edit Stock Threshold"
                                                Command="{Binding DataContext.EditStatusCommand, RelativeSource={RelativeSource AncestorType=DataGrid}}"
                                                CommandParameter="{Binding}"
                                                Style="{StaticResource SecondaryButton}"
                                                Padding="8,0" Height="30" Width="30">
                                            <TextBlock Text="&#xf044;" 
                                                       Style="{StaticResource Icon}"
                                                       FontSize="14" 
                                                       Foreground="#FF2C3E50"/>
                                        </Button>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                        </DataGrid.Columns>
                    </DataGrid>
                </Grid>
            </Border>

            <!-- Right column: Category Management -->
            <Border Grid.Column="2" Background="White" CornerRadius="6" Padding="20"
                    BorderThickness="1" BorderBrush="#FFE0E0E0">
                <StackPanel>
                    <TextBlock Text="Category Management" 
                               FontSize="18" FontWeight="Bold" 
                               Margin="0,0,0,15" Foreground="#FF2C3E50"/>

                    <!-- Add New Category -->
                    <StackPanel Margin="0,0,0,20">
                        <TextBlock Text="Add New Category:" Style="{StaticResource FormLabel}"/>
                        <StackPanel Orientation="Horizontal">
                            <TextBox Text="{Binding NewCategoryName, Mode=TwoWay}" 
                                     Width="200" Height="35" Margin="0,0,10,0"
                                     Padding="8" VerticalContentAlignment="Center"
                                     FontSize="14"/>
                            <Button Content="Add" Command="{Binding AddCategoryCommand}"
                                    Style="{StaticResource PrimaryButton}" Width="80"/>
                        </StackPanel>
                    </StackPanel>

                    <!-- Category List -->
                    <TextBlock Text="Existing Categories:" Style="{StaticResource FormLabel}"/>
                    <ListBox ItemsSource="{Binding ItemCategories}" 
                             SelectedItem="{Binding SelectedCategoryForEdit, Mode=TwoWay}"
                             Height="200" Margin="0,0,0,15"
                             BorderThickness="1" BorderBrush="#FFE0E0E0">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding}" FontSize="14" Padding="5"/>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>

                    <!-- Edit/Delete Category -->
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                        <Button Content="Edit" Command="{Binding EditCategoryCommand}"
                                Style="{StaticResource SecondaryButton}" Margin="0,0,10,0" Width="80"/>
                        <Button Content="Delete" Command="{Binding DeleteCategoryCommand}"
                                Style="{StaticResource DangerButton}" Width="80"/>
                    </StackPanel>
                </StackPanel>
            </Border>

            <!-- Edit Panel (Overlay) -->
            <Border Grid.Column="0" Grid.ColumnSpan="3" 
                    Background="#80000000" 
                    Visibility="{Binding IsEditPanelVisible, Converter={StaticResource BoolToVisibilityConverter}}"
                    Panel.ZIndex="10">
                <Border Background="White" CornerRadius="6" Padding="20" Width="400"
                        HorizontalAlignment="Center" VerticalAlignment="Center">
                    <StackPanel>
                        <TextBlock Text="Edit Stock Threshold" 
                                   FontSize="18" FontWeight="Bold" 
                                   Margin="0,0,0,15" Foreground="#FF2C3E50"/>

                        <TextBlock Text="Item:" Style="{StaticResource FormLabel}"/>
                        <TextBlock Text="{Binding SelectedForEdit.Name}" FontSize="16" Margin="0,0,0,15"/>

                        <TextBlock Text="Current Stock:" Style="{StaticResource FormLabel}"/>
                        <TextBlock Text="{Binding SelectedForEdit.QuantityDisplay}" FontSize="16" Margin="0,0,0,15"/>

                        <TextBlock Text="Current Status:" Style="{StaticResource FormLabel}"/>
                        <TextBlock Text="{Binding SelectedForEdit.StockStatus}" FontSize="16" Margin="0,0,0,15"/>

                        <TextBlock Text="Threshold Quantity:" Style="{StaticResource FormLabel}"/>
                        <TextBox Text="{Binding GoodThreshold, Mode=TwoWay}" 
                                 FontSize="16" Height="35" Margin="0,0,0,15"
                                 Padding="8" VerticalContentAlignment="Center"/>

                        <TextBlock Text="When stock falls below this amount, it will be marked as 'Low Stock'"
                                   FontSize="12" Foreground="#FF666666" TextWrapping="Wrap"
                                   Margin="0,0,0,20"/>

                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                            <Button Content="Save" Command="{Binding SaveStatusCommand}" 
                                    Style="{StaticResource PrimaryButton}" Margin="0,0,10,0" Width="80"/>
                            <Button Content="Cancel" Command="{Binding CancelEditCommand}"
                                    Style="{StaticResource SecondaryButton}" Width="80"/>
                        </StackPanel>
                    </StackPanel>
                </Border>
            </Border>
        </Grid>

        <!-- Footer -->
        <Border Grid.Row="2" Background="White" BorderBrush="#FFE0E0E0" BorderThickness="1,1,0,0" Padding="20">
            <Button Content="Back to Monitoring Dashboard"
                    Width="250"
                    Style="{StaticResource SecondaryButton}"
                    HorizontalAlignment="Left"
                    Command="{Binding BackCommand}"/>
        </Border>
    </Grid>
</UserControl>