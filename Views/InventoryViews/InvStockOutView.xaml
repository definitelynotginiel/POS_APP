<UserControl x:Class="POS_APP.Views.InventoryViews.InvStockOutView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:conv="clr-namespace:POS_APP.Converters"
             mc:Ignorable="d" 
             d:DesignHeight="1000" d:DesignWidth="1200">

    <UserControl.Resources>
        <conv:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter"/>

        <Style x:Key="FormLabel" TargetType="TextBlock">
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontSize" Value="20"/>
            <Setter Property="Margin" Value="0,0,0,6"/>
            <Setter Property="Foreground" Value="#FF444444"/>
        </Style>

        <Style x:Key="FormControl" TargetType="Control">
            <Setter Property="FontSize" Value="20"/>
            <Setter Property="Margin" Value="0,0,0,16"/>
            <Setter Property="Height" Value="40"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
        </Style>
    </UserControl.Resources>

    <Grid Background="#FFF5F5F5">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="#FF2C3E50" Padding="20,15">
            <TextBlock Text="Stock Out Items" 
                       Foreground="White" 
                       FontSize="28" 
                       FontWeight="Bold"
                       VerticalAlignment="Center"/>
        </Border>

        <Grid Grid.Row="1" Margin="20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="10"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Left column: category + item list -->
            <Border Grid.Column="0" Background="White" CornerRadius="6" Padding="20"
                    BorderThickness="1" BorderBrush="#FFE0E0E0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- Category Selection -->
                    <StackPanel Grid.Row="0">
                        <TextBlock Style="{StaticResource FormLabel}" Text="Select Category"/>
                        <ComboBox ItemsSource="{Binding ItemCategories}" 
                                  SelectedItem="{Binding SelectedCategory}" 
                                  Style="{StaticResource FormControl}"/>
                    </StackPanel>

                    <!-- Search Box -->
                    <StackPanel Grid.Row="1" Margin="0,0,0,10">
                        <TextBlock Style="{StaticResource FormLabel}" Text="Select Item"/>
                        <Border BorderBrush="#FFCCCCCC" BorderThickness="1" CornerRadius="4" 
                                Background="White" Height="40">
                            <Grid>
                                <TextBox Text="{Binding SearchQuery, UpdateSourceTrigger=PropertyChanged}" 
                                         BorderThickness="0" Background="Transparent"
                                         Padding="12,0,40,0" VerticalContentAlignment="Center"
                                         FontSize="20" Margin="0"/>
                                <TextBlock Text="&#xf002;" Foreground="Gray" FontSize="20" Style="{StaticResource Icon}" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="0,0,12,0" />
                            </Grid>
                        </Border>
                    </StackPanel>

                    
                    <!-- Items List -->
                    <Border Grid.Row="2" CornerRadius="4">
                        <ListBox ItemsSource="{Binding FilteredItems}" 
             SelectedItem="{Binding SelectedItem}" 
             BorderThickness="1"
             BorderBrush="#FFCCCCCC">
                            <ListBox.Template >
                                <ControlTemplate TargetType="ListBox">
                                    <Border BorderBrush="#FFCCCCCC" BorderThickness=".5" Background="White">
                                        <ScrollViewer>
                                            <ItemsPresenter/>
                                        </ScrollViewer>
                                    </Border>
                                </ControlTemplate>
                            </ListBox.Template>
                            <ListBox.ItemContainerStyle>
                                <Style TargetType="ListBoxItem">
                                    <Setter Property="BorderBrush" Value="Transparent"/>
                                    <Setter Property="BorderThickness" Value="0"/>
                                    <Setter Property="FontSize" Value="20"/>
                                    <Setter Property="Foreground" Value="#FF333333"/>
                                    <Setter Property="Padding" Value="10"/>
                                    <!-- Ensure text color -->
                                    <Style.Triggers>
                                        <Trigger Property="IsSelected" Value="True">
                                            <Setter Property="Background" Value="#FFE3F2FD"/>
                                            <Setter Property="BorderBrush" Value="#FF2196F3"/>
                                            <Setter Property="BorderThickness" Value="1"/>
                                            <Setter Property="Foreground" Value="#FF000000"/>
                                            <!-- Dark text on selection -->
                                        </Trigger>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="#FFF5F9FF"/>
                                            <Setter Property="Foreground" Value="#FF000000"/>
                                            <!-- Dark text on hover -->
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </ListBox.ItemContainerStyle>
                        </ListBox>
                    </Border>
                </Grid>
            </Border>

            <!-- Right column: stock out form -->
            <Border Grid.Column="2" Background="White" CornerRadius="6" Padding="20"
                    BorderThickness="1" BorderBrush="#FFE0E0E0">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel>
                        <TextBlock Style="{StaticResource FormLabel}" Text="Item Name"/>
                        <TextBox Text="{Binding ItemName}" Style="{StaticResource FormControl}"/>

                        <TextBlock Style="{StaticResource FormLabel}" Text="Item Pack Quantity"/>
                        <TextBox Text="{Binding PackQuantity}" Style="{StaticResource FormControl}"/>

                        <TextBlock Style="{StaticResource FormLabel}" Text="Unit of Measurement Per Pack"/>
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,16">
                            <TextBox Width="140" Text="{Binding Quantity, Mode=TwoWay}" 
                                     Height="40" VerticalContentAlignment="Center" FontSize="20" Margin="0,0,12,0"/>
                            <ComboBox Width="160" ItemsSource="{Binding UnitMeasurementTypes}" 
                                      SelectedItem="{Binding SelectedUnitType, Mode=TwoWay}" 
                                      Height="40" VerticalContentAlignment="Center" FontSize="20" />
                        </StackPanel>

                        <TextBlock Style="{StaticResource FormLabel}" Text="Estimated Unit Cost Per Pack"/>
                        <TextBox Text="{Binding UnitCost}" Style="{StaticResource FormControl}"/>

                        <TextBlock Style="{StaticResource FormLabel}" Text="Item Pack/s Expiration Date"/>
                        <DatePicker SelectedDate="{Binding ExpirationDate}" 
                                    Height="40" FontSize="20" Margin="0,0,0,16" VerticalContentAlignment="Center"/>

                        <TextBlock Style="{StaticResource FormLabel}" Text="Reason for Stocking Out"/>
                        <ComboBox ItemsSource="{Binding StockOutReasons}" 
                                  SelectedItem="{Binding SelectedReason}"
                                  Style="{StaticResource FormControl}"/>

                        <TextBox Text="{Binding CustomReason}" 
                                 Style="{StaticResource FormControl}"
                                 Visibility="{Binding IsOtherReasonVisible, Converter={StaticResource BoolToVisibilityConverter}}"
                                 />

                        <!-- Stock-Out Summary -->
                        <Border Background="#FFF9F9F9" BorderBrush="#FFE0E0E0" BorderThickness="1" 
                                CornerRadius="4" Padding="15" Margin="0,20,0,20">
                            <StackPanel>
                                <TextBlock Text="Stock-Out Summary" FontSize="20" FontWeight="Bold" 
                                           Margin="0,0,0,10" Foreground="#FF2C3E50"/>
                                <TextBlock Text="{Binding StockOutSummary}" 
                                           FontSize="20" 
                                           TextWrapping="Wrap" 
                                           Foreground="#FF444444"/>
                            </StackPanel>
                        </Border>

                        <Button Content="STOCK OUT" 
                                Command="{Binding StockOutCommand}" 
                                Style="{StaticResource BRole}"
                                Width="200" HorizontalAlignment="Left"/>
                    </StackPanel>
                </ScrollViewer>
            </Border>
        </Grid>

        <!-- Footer -->
        <Border Grid.Row="2" Background="White" BorderBrush="#FFE0E0E0" BorderThickness="0,1,0,0" Padding="20">
            <Button Content="BACK"
                    Width="200"
                    Style="{StaticResource BRole}"
                    HorizontalAlignment="Left"
                    Command="{Binding BackCommand}"/>
        </Border>
    </Grid>
</UserControl>