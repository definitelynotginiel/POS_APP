<UserControl x:Class="POS_APP.Views.InventoryViews.InvExpirationTrackView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:conv="clr-namespace:POS_APP.Converters"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="1000">

    <UserControl.Resources>
        <conv:ExpirationStatusToColorConverter x:Key="StatusColorConverter"/>
        <conv:ExpirationStatusToIconConverter x:Key="StatusIconConverter"/>
    </UserControl.Resources>

    <Grid Background="#FFF5F5F5">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="#FF2C3E50" Padding="20,15">
            <DockPanel>
                <TextBlock Text="Expiration Tracking" 
                           Foreground="White"
                           FontSize="28" 
                           FontWeight="Bold" 
                           DockPanel.Dock="Left"/>
                <TextBlock Text="{Binding CurrentDate, StringFormat='MMMM dd, yyyy | M/d/yyyy'}"
                           Foreground="White"
                           FontSize="20" 
                           HorizontalAlignment="Right"
                           VerticalAlignment="Center"
                           DockPanel.Dock="Right"/>
            </DockPanel>
        </Border>

        <!-- Summary Cards -->
        <WrapPanel Grid.Row="1" Margin="20,15,20,10" HorizontalAlignment="Center">
            <!-- Total Items Card -->
            <Border Background="White" CornerRadius="6" Padding="15" 
                    Margin="5" Width="140" Height="80"
                    BorderThickness="1" BorderBrush="#FFE0E0E0">
                <StackPanel>
                    <TextBlock Text="Total Items" FontSize="16" Foreground="#FF666666"/>
                    <TextBlock Text="{Binding TotalItemsCount}" FontSize="20" 
                               FontWeight="Bold" Foreground="#FF2C3E50"/>
                </StackPanel>
            </Border>

            <!-- Near Expiry Card -->
            <Border Background="#FFFFF8E1" CornerRadius="6" Padding="15" 
                    Margin="5" Width="140" Height="80">
                <StackPanel>
                    <TextBlock Text="Near Expiry" FontSize="16" Foreground="#FF8A6D3B"/>
                    <TextBlock Text="{Binding NearExpiryCount}" FontSize="20" 
                               FontWeight="Bold" Foreground="#FF8A6D3B"/>
                </StackPanel>
            </Border>

            <!-- Expired Card -->
            <Border Background="#FFFBEBEE" CornerRadius="6" Padding="15" 
                    Margin="5" Width="140" Height="80">
                <StackPanel>
                    <TextBlock Text="Expired" FontSize="16" Foreground="#FFA94442"/>
                    <TextBlock Text="{Binding ExpiredCount}" FontSize="20" 
                               FontWeight="Bold" Foreground="#FFA94442"/>
                </StackPanel>
            </Border>

            <!-- Good Stock Card -->
            <Border Background="#FFE8F5E9" CornerRadius="6" Padding="15" 
                    Margin="5" Width="140" Height="80">
                <StackPanel>
                    <TextBlock Text="Good Stock" FontSize="16" Foreground="#FF3C763D"/>
                    <TextBlock Text="{Binding GoodStockCount}" FontSize="20" 
                               FontWeight="Bold" Foreground="#FF3C763D"/>
                </StackPanel>
            </Border>
        </WrapPanel>

        <!-- Main Content -->
        <Border Grid.Row="2" Margin="20,0,20,20" Background="White" CornerRadius="6"
                BorderThickness="1" BorderBrush="#FFE0E0E0">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Filter Section -->
                <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="15,15,15,10">
                    <TextBlock Text="Categories:" VerticalAlignment="Center" 
                               FontSize="20" FontWeight="SemiBold" Margin="0,0,8,0"/>
                    <ComboBox Width="250" Height="32"
                              ItemsSource="{Binding ItemCategories}"
                              SelectedItem="{Binding SelectedCategory, Mode=TwoWay}"
                              FontSize="20"/>

                    <!-- Status Filter -->
                    <TextBlock Text="Status:" VerticalAlignment="Center" 
                               FontSize="20" FontWeight="SemiBold" Margin="20,0,8,0"/>
                    <ComboBox Width="150" Height="32"
                              ItemsSource="{Binding StatusFilters}"
                              SelectedItem="{Binding SelectedStatusFilter, Mode=TwoWay}"
                              FontSize="20"/>
                </StackPanel>

                <!-- DataGrid -->
                <DataGrid Grid.Row="1" Margin="10,0,10,10"
                          AutoGenerateColumns="False"
                          FontSize="20"
                          CanUserAddRows="False"
                          CanUserDeleteRows="False"
                          IsReadOnly="True"
                          HeadersVisibility="Column"
                          AlternatingRowBackground="#FFF9F9F9"
                          RowHeaderWidth="0"
                          ItemsSource="{Binding InventoryItems}"
                          SelectedItem="{Binding SelectedInventoryItem, Mode=TwoWay}">

                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Item Name" Binding="{Binding ItemName}" Width="2*" />
                        <DataGridTextColumn Header="Category" Binding="{Binding Category}" Width="1.5*" />
                        <DataGridTextColumn Header="Quantity" Binding="{Binding QuantityDisplay}" Width="1*" />

                        <!-- Expiration Status with Color Coding -->
                        <DataGridTemplateColumn Header="Expiration Status" Width="1.5*">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                        <TextBlock Text="{Binding Status, Converter={StaticResource StatusIconConverter}}" 
                           Style="{StaticResource Icon}" 
                           FontSize="16"
                           Foreground="{Binding Status, Converter={StaticResource StatusColorConverter}}"
                           Margin="8,0"/>
                                        <TextBlock Text="{Binding Status}" VerticalAlignment="Center"/>
                                    </StackPanel>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>

                        <DataGridTextColumn Header="Expiration Date" Binding="{Binding ExpirationDate, StringFormat='MM/dd/yyyy'}" Width="1.2*" />
                        <DataGridTextColumn Header="Days Remaining" Binding="{Binding DaysRemaining}" Width="1*" />

                        <!-- Stock Out Button Column -->
                        <DataGridTemplateColumn Header="Action" Width="100">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <Button Command="{Binding DataContext.StockOutCommand, RelativeSource={RelativeSource AncestorType=DataGrid}}"
                                            CommandParameter="{Binding}"
                                            ToolTip="Stock Out Item"
                                            Padding="5" Height="40" Width="40"
                                            BorderBrush="Transparent"
                                            Background="Transparent">
                                        <TextBlock Text="&#xf056;" Style="{StaticResource Icon}" FontSize="20" Foreground="Red" TextAlignment="Center"/>
                                    </Button>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                    </DataGrid.Columns>
                    <DataGrid.RowStyle>
                        <Style TargetType="DataGridRow">
                            <Setter Property="FontSize" Value="20"/>
                            <Setter Property="Padding" Value="20 10"/>
                            <Setter Property="VerticalContentAlignment" Value="Center"/>
                            <Setter Property="BorderBrush" Value="Transparent"/>
                            <Setter Property="BorderThickness" Value="0 0 0 1"/>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#FFF5F9FF"/>
                                </Trigger>
                                <Trigger Property="IsSelected" Value="True">
                                    <Setter Property="Background" Value="#FFE3F2FD"/>
                                    <Setter Property="BorderBrush" Value="#FF2196F3"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </DataGrid.RowStyle>

                    <DataGrid.ColumnHeaderStyle>
                        <Style TargetType="DataGridColumnHeader">
                            <Setter Property="Background" Value="#FFF7F9FC"/>
                            <Setter Property="BorderBrush" Value="#FFE0E0E0"/>
                            <Setter Property="BorderThickness" Value="0 0 1 0"/>
                            <Setter Property="Foreground" Value="#FF2C3E50"/>
                            <Setter Property="FontWeight" Value="SemiBold"/>
                            <Setter Property="Padding" Value="12,8"/>
                            <Setter Property="HorizontalContentAlignment" Value="Left"/>
                        </Style>
                    </DataGrid.ColumnHeaderStyle>
                </DataGrid>
            </Grid>
        </Border>

        <!-- Footer -->
        <Border Grid.Row="3" Background="White" BorderBrush="#FFE0E0E0" BorderThickness="1,1,0,0" Padding="20">
            <Button Content="BACK"
                    Width="200"
                    Style="{StaticResource BRole}"
                    HorizontalAlignment="Left"
                    Command="{Binding BackCommand}"/>
        </Border>
    </Grid>
</UserControl>