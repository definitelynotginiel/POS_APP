<UserControl x:Class="POS_APP.Views.InventoryViews.InvExpirationTrackView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    
    <Grid Background="AliceBlue">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/> 
            <!--Expiration Tracking Header-->
            <RowDefinition Height="*"/>
            <!--Main Content Area-->
        </Grid.RowDefinitions>
        <DockPanel Grid.Row="0" Margin="0,0,0,15">
            <TextBlock Text="Expiration Tracking" 
                       FontSize="22" FontWeight="Bold" 
                       DockPanel.Dock="Left"/>
            <TextBlock Text="Date Today: July 13, 2026 | 7/13/2026"
                       FontSize="14" 
                       HorizontalAlignment="Right"
                       DockPanel.Dock="Right"/>
        </DockPanel>
        <Grid Grid.Row="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <!-- Dropdown Category, Datagrid -->
                <RowDefinition Height="*"/>
                <!-- Back Button -->
            </Grid.RowDefinitions>
            
            <StackPanel Grid.Row="0">
                <StackPanel Orientation="Horizontal" Margin="0,0,0,12">
                    <TextBlock Text="Categories:" VerticalAlignment="Center" FontSize="16" Margin="0,0,8,0"/>
                    <ComboBox Width="200"
              ItemsSource="{Binding ItemCategories}"
              SelectedItem="{Binding SelectedCategory, Mode=TwoWay}"
              FontSize="16"/>
                </StackPanel>
                <DataGrid 
                  AutoGenerateColumns="False"
                  CanUserAddRows="False"
                  CanUserDeleteRows="False"
                  IsReadOnly="True"
                  HeadersVisibility="Column"
                  AlternatingRowBackground="LightGray"
                  RowHeaderWidth="0"
                  Margin="0,0,0,15"
                  ItemsSource="{Binding InventoryItems}"
                  SelectedItem="{Binding SelectedInventoryItem, Mode=TwoWay}">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Items" Binding="{Binding ItemName}" Width="*"/>
                        <DataGridTextColumn Header="Measurement Type" Binding="{Binding Unit}" Width="*"/>
                        <DataGridTextColumn Header="Expiration Status" Binding="{Binding Status}" Width="*"/>
                        <DataGridTextColumn Header="Expiration Dates" Binding="{Binding ExpirationDate}" Width="*"/>

                        <!-- Stock Out Button Column -->
                        <DataGridTemplateColumn Header="Stock Out" Width="100">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <Button Content="⛔"
                                    ToolTip="Stock Out"
                                    Command="{Binding DataContext.StockOutCommand, RelativeSource={RelativeSource AncestorType=DataGrid}}"
                                    CommandParameter="{Binding}" />
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                    </DataGrid.Columns>
                </DataGrid>
            </StackPanel>
            <Button Grid.Row="1"
            Content="Back to Monitoring Dashboard"
            Width="250"
            Height="35"
            HorizontalAlignment="Left"
            Command="{Binding BackCommand}"/>
        </Grid>
    </Grid>
</UserControl>
