<Window x:Class="POS_APP.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:POS_APP"
        mc:Ignorable="d"
        xmlns:views="clr-namespace:POS_APP.Views.LoginViews" 
        xmlns:vm="clr-namespace:POS_APP.ViewModels.LoginViewModels"
        Icon="/POS_APP;component/Assets/logo.ico"
        Title="POS" Height="1200" Width="1920">
    
    <Window.Resources>
        <!-- Link ViewModel to View -->
        <DataTemplate DataType="{x:Type vm:BranchLoginViewModel}">
            <views:BranchLoginView />
        </DataTemplate>
    </Window.Resources>
    
    <ContentControl Content="{Binding CurrentView}" />
</Window>
